                        //txttransDate.value = myData.Date;
                        //txttransType.value = myData.Year;
                        txtCarrierid.value = myData.id;
                        txtCarrierno.value = myData.no;
                        txtCarriername.value = myData.name;
                        txtRemarks.value = myData.Remarks;
                       
                    
                    

                    });
            });
        });
