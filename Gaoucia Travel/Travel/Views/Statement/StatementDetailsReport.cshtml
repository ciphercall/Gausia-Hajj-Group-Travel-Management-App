                @foreach (var itemreceive in paymentquery)
                {
                    if (itemreceive.DEBITCD == null)
                    {
                        code = "0";
                    }
                    else
                    {
                        code = Convert.ToString(itemreceive.DEBITCD).Substring(0, 10);
